{
  "name": "fcc-bizfin-logo-designer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:web": "pnpm --filter @fcc-bizfin-logo-designer/web dev",
    "dev:api": "pnpm --filter @fcc-bizfin-logo-designer/api dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:web": "pnpm --filter @fcc-bizfin-logo-designer/web build",
    "build:api": "pnpm --filter @fcc-bizfin-logo-designer/api build",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "lint:fix": "pnpm --filter \"./apps/*\" lint:fix",
    "format": "prettier --write \"apps/**/*.{ts,tsx,js,jsx,json,css,md}\" \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,js,jsx,json,css,md}\" \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
